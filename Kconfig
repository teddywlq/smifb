config DRM_SMI
	tristate "SiliconMotion SM750/SM768/SM770 DRM driver"
        depends on DRM && PCI && MMU
        select DRM_TTM
        select DRM_KMS_HELPER
        select SND_PCM
        select DRM_VRAM_HELPER
        help
		Say yes for SiliconMotion SM750/SM768/SM770 DRM driver.
         





